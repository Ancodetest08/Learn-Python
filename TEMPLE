	print('Happy New Year:', friend)
print('Done!')

>>> numbers = [1, 2, 3, 4, 5]
>>> sum(numbers)
15
>>> len(numbers)
5
>>> max(numbers)
5
>>> min(numbers)
1

def min(values):
	smallest = None
	for value in values:
		if smallest is None or value < smallest:
			smallest = value
	return smallest

