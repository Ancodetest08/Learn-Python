def print_lyrics():
	print("I'm a lumberjack, and I'm okey.")
	print('I sleep all night and I work all day.')
print_lyrics()

def print_twice(bruce):
	print(bruce)
	print(bruce)
print_twice('Spam')

>>> result = print_twice('Bing')
Bing
Bing
>>> print(result)
None

