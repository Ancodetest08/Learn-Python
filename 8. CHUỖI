s = '''
Banana
Apple
Orange
'''

s = 'CODELEARN123'
s[-1]                   # 3
s[-2]                   # 2
s[3:5]					# EL
s[7:]					# RN123
s[:6]					# CODELE
s.lower()				# codelearn123
s.upper()				# CODELEARN123
s.isalnum()				# False (All Chữ Và Số)
s.isalpha()				# False (All Chữ)
s.isnumeric()			# False (All Số)

s = 'A1B1C1D1E1'
s.split('1')			# ['A', 'B', 'C', 'D', 'E', '']
s.replace('1', '2')     # A2B2C2D2E2

list = ['a', 'b', 'c']
print('-'.join(list))   # a-b-c
list.reverse()			# ['c', 'b', 'a']

x = 12.3456789
print('The value of x is %3.2f' %x)			# The value of x is 12.35
